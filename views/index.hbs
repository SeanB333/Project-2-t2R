{{!-- button area --}}
<body>
<div class="row m-5 fade-btn">
    {{!-- search bar and button --}}
    <form class="form-inline">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" id="selectedKeyword">
        <button class="btn btn-outline-primary my-2 my-sm-0"  type="submit" id="searchSubmit">Search</button>
    </form>
    {{!-- modal button --}}
    <div class="justify-content-center ml-2">
        <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#exampleModal"
            data-whatever="@mdo">Post Code</button>
    </div>
    {{!-- browse button --}}
    <div class="justify-content-center ml-2">
        <button class="btn btn-outline-primary my-2 my-sm-0">Browse</button>
    </div>
     {{!-- options button --}}
    <div class="justify-content-center ml-2 float-right">
        <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target=".bd-example-modal-lg">Options</button>
    </div>
</div>
{{!-- modal post --}}
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Xctract your code </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <span id="error"></span>
                    <div class="form-group">
                        <label for="username" class="col-form-label">User name</label>
                        <input type="text" class="form-control" id="username" placeholder="Enter user name here" name="fname" required>
                    </div>
                    <div class="form-group">
                        <label for="codeDescription" class="col-form-label">Describe your code</label>
                        <input type="text" class="form-control" id="codeDescription" placeholder="Enter description here" name="fname" required>
                    </div>
                    <div class="form-group">
                        <label for="language" class="col-form-label">Choose your language</label>
                        <select id="language" class="custom-select custom-select-md mb-3 form-control">
                            <option value="html">Html</option>
                            <option value="css">CSS</option>
                            <option value="javascript">Javascript</option>
                            <option value="json">JSON</option>
                            <option value="sql">SQL</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="keywords" class="col-form-label">Enter keywords about your code</label>
                        <input type="text" class="form-control" id="keywords" placeholder="Keywords" name="fname" required>
                    </div>
                    <div class="form-group">
                        <label for="price" class="col-form-label">Price</label>
                        <input type="text" class="form-control" id="price" placeholder="$0.00" name="fname" required>
                    </div>
                    <div class="form-group outline">
                        <label for="codesnip" class="col-form-label">Copy and paste your code</label>
                        <textarea class="form-control " id="codesnip"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" id="upload" class="btn btn-primary">Post</button>
            </div>
        </div>
    </div>
</div>
